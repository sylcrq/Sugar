<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.fragment.MyRepoFragment">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/repo_pager_sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:pstsDividerPadding="5dp"
        app:pstsIndicatorColor="@color/DarkBlue"
        app:pstsIndicatorHeight="3dp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="false"
        app:pstsUnderlineHeight="1dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/repo_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/repo_pager_sliding_tab"/>

</RelativeLayout>
